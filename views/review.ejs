<!DOCTYPE html>
<html>
  <head>
    <title><%= review.PostTitle %> - Review</title>
    <link rel="stylesheet" type="text/css" href="/main.css" />
  </head>
  <body>
    <%- include('./partials/header.ejs'); -%>
    <div class="container">
      <h1 class="page-title"><%= review.PostTitle %></h1>
      <div class="card">
        <div class="review-content">
          <p><%= review.ReviewText %></p>
        </div>
        <div class="review-details">
          <p class="rating">Rating: <%= review.Rating %>/5</p>
          <p class="meta">Reviewed by <%= review.UserName %> on <%= review.PostDate.toDateString() %></p>
        </div>
      </div>

      <section class="replies-section">
        <h2>Replies</h2>
        <div class="card">
          <% if (replies.length > 0) { %>
            <table class="styled-table">
              <thead>
                <tr>
                  <th>Reply</th>
                  <th>User</th>
                </tr>
              </thead>
              <tbody>
                <% replies.forEach(function(reply) { %>
                <tr>
                  <td><%= reply.Reply %></td>
                  <td>By: <%= reply.UserName %></td>
                </tr>
                <% }) %>
              </tbody>
            </table>
          <% } else { %>
            <p>No replies yet.</p>
          <% } %>
        </div>
      </section>

      <section class="reply-form-section">
        <h2>Make a reply</h2>
        <div class="card">
          <form method="POST" action="/addreply">
            <div class="form-group">
                <label for="content">Your Reply:</label>
                <textarea id="content" name="content" placeholder="Write your reply here..." required></textarea>
            </div>
            <input type="hidden" name="reviewId" value="<%= review.ReviewID %>" >
            <button type="submit" class="btn">Post Reply</button>
        </form>
        </div>
        <% if (errorMessage) { %>
          <div class="error-message"><%= errorMessage %></div>
        <% } %>
      </section>
    </div>
  </body>
</html>
